{
  "name": "--libraryname--",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "typings": "dist/types/index.d.ts",
  "sideEffects": false,
  "files": ["dist"],
  "author": "escapace <opensource@escapace.com>",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint":
      "tslint --exclude 'src/types/**/*.ts' --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --emitDeclarationOnly && rollup -c rollup.config.ts",
    "test:travis": "npm run lint && npm run test",
    "test": "npm run test:node && npm run test:browser",
    "report-coverage":
      "npm run test:coverage && nyc report --reporter=text-lcov > coverage.lcov && codecov ; rimraf coverage.lcov",
    "test:browser": "cross-env TS_NODE_PROJECT=tsconfig-node.json karma start --single-run",
    "test:node":
      "cross-env TS_NODE_PROJECT=tsconfig-node.json mocha --require ts-node/register 'src/**/*.spec.ts'",
    "test:coverage": "nyc npm run test:node"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "tslint --exclude 'src/types/**/*.ts' --project tsconfig.json --fix",
      "prettier --write --parser typescript --trailing-comma none --no-semi --single-quote",
      "git add"
    ],
    "{src,test}/**/*.js": [
      "prettier --write --trailing-comma none --no-semi --single-quote",
      "git add"
    ],
    "**/*.json": ["prettier --write --parser json", "git add"],
    "**/*.md": ["prettier --parser markdown --print-width 80", "git add"]
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "tempDirectory": "./node_modules/.cache/nyc_output",
    "include": ["src/**/*.ts"],
    "extension": [".ts", ".tsx"],
    "exclude": ["src/**/*.spec.ts"],
    "require": ["ts-node/register"],
    "reporter": ["text"],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.1",
    "chai": "^4.1.2",
    "chalk": "^2.3.2",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.4",
    "husky": "^0.15.0-rc.13",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-typescript": "^3.0.12",
    "lint-staged": "^7.0.0",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "prettier": "^1.11.1",
    "puppeteer": "^1.2.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.12.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-escapace": "^1.1.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.8.1",
    "validate-commit": "^3.4.0"
  },
  "dependencies": {
    "tslib": "^1.9.0"
  }
}
