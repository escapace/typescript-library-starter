{
  "name": "typescript-library-starter",
  "version": "0.0.0",
  "description": "",
  "keywords": ["TypeScript"],
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "browser": "lib/umd/index.js",
  "typings": "lib/types/index.d.ts",
  "sideEffects": false,
  "files": ["lib"],
  "bugs": "https://github.com/escapace/typescript-library-starter/issues",
  "author": "escapace <opensource@escapace.com>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/escapace/typescript-library-starter",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=9.0.0"
  },
  "scripts": {
    "lint": "tslint --exclude 'src/types/**/*.ts' --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "build": "recce build -e src/index.ts",
    "test:travis": "npm run lint && npm run test",
    "test": "npm run test:node && npm run test:browser",
    "report-coverage": "npm run test:coverage && nyc report --reporter=text-lcov > coverage.lcov && codecov ; rimraf coverage.lcov",
    "test:browser": "karma start --single-run",
    "test:node": "cross-env TS_NODE_PROJECT=tsconfig-node.json mocha --opts .mocha.opts 'src/**/*.spec.ts' 'test/**/*.ts'",
    "test:coverage": "nyc npm run test:node"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "tslint --exclude 'src/types/**/*.ts' --project tsconfig.json --fix",
      "prettier --write",
      "git add"
    ],
    "{src,test}/**/*.js": ["prettier --write", "git add"],
    "**/*.json": ["prettier --write", "git add"],
    "**/*.md": ["prettier --write", "git add"]
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "tempDirectory": "./node_modules/.cache/nyc_output",
    "include": ["src/**/*.ts"],
    "extension": [".ts", ".tsx"],
    "exclude": ["src/**/*.spec.ts", "test/**/*.ts"],
    "reporter": ["text"]
  },
  "devDependencies": {
    "@babel/polyfill": "7.0.0",
    "@types/chai": "4.1.6",
    "@types/mocha": "5.2.5",
    "@types/node": "10.11.3",
    "chai": "4.2.0",
    "codecov": "3.1.0",
    "cross-env": "5.2.0",
    "husky": "1.1.0",
    "karma": "3.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-mocha": "1.3.0",
    "karma-sauce-launcher": "1.2.0",
    "karma-typescript": "3.0.13",
    "lint-staged": "7.3.0",
    "lodash": "4.17.11",
    "mocha": "5.2.0",
    "nyc": "13.0.1",
    "prettier": "1.14.3",
    "puppeteer": "1.8.0",
    "rimraf": "2.6.2",
    "source-map-support": "0.5.9",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-escapace": "1.3.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-config-standard": "8.0.1",
    "tslint-microsoft-contrib": "5.2.1",
    "typescript": "3.1.1",
    "validate-commit": "3.4.0"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  }
}
