{
  "name": "@escapace/typescript-library-starter",
  "description": "",
  "version": "0.0.0",
  "author": "escapace <opensource@escapace.com>",
  "browser": "lib/umd/index.js",
  "bugs": "https://github.com/escapace/typescript-library-starter/issues",
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.7",
    "@types/node": "12.0.10",
    "chai": "4.2.0",
    "codecov": "3.5.0",
    "husky": "2.7.0",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "semantic-release": "15.13.18",
    "syncpack": "4.5.3",
    "tslint": "5.18.0",
    "tslint-config-escapace": "1.6.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-microsoft-contrib": "6.2.0",
    "typescript": "3.5.2"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/escapace/typescript-library-starter",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run typecheck && npm run test"
    }
  },
  "keywords": [
    "TypeScript"
  ],
  "license": "MPL-2.0",
  "lint-staged": {
    "package.json": [
      "syncpack-format --source",
      "syncpack-set-semver-ranges --dev --source",
      "git add"
    ],
    "{src,examples,perf}/**/*.ts": [
      "tslint --exclude 'src/types/**/*.ts' --project tsconfig.json --fix",
      "prettier --write",
      "git add"
    ],
    "{src,examples,perf}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "escapace/typescript-library-starter",
  "scripts": {
    "build": "recce build -e src/index.ts",
    "lint": "tslint --exclude 'src/types/**/*.ts' --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "test": "recce test --browser 'src/**.spec.ts' --node 'src/**.spec.ts' --reporter lcov --reporter text",
    "typecheck": "tsc --noEmit"
  },
  "sideEffects": false,
  "typings": "lib/types/index.d.ts"
}
