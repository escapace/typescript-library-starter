{
  "name": "@escapace/typescript-library-starter",
  "description": "",
  "version": "0.0.0",
  "author": "escapace <opensource@escapace.com>",
  "browser": "lib/umd/index.js",
  "bugs": "https://github.com/escapace/typescript-library-starter/issues",
  "dependencies": {
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@ls-lint/ls-lint": "1.8.1",
    "@types/chai": "4.2.11",
    "@types/mocha": "7.0.2",
    "@types/node": "13.13.2",
    "@typescript-eslint/eslint-plugin": "2.29.0",
    "@typescript-eslint/parser": "2.29.0",
    "chai": "4.2.0",
    "codecov": "3.6.5",
    "eslint": "6.8.0",
    "eslint-config-escapace": "3.0.2",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-standard-with-typescript": "15.0.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsdoc": "24.0.0",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.5",
    "lint-staged": "10.1.7",
    "prettier": "2.0.5",
    "semantic-release": "17.0.7",
    "syncpack": "5.0.1",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/escapace/typescript-library-starter",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run typecheck && npm run test"
    }
  },
  "keywords": [
    "TypeScript"
  ],
  "license": "MPL-2.0",
  "lint-staged": {
    "package.json": [
      "syncpack-format --source",
      "syncpack-set-semver-ranges --dev --source"
    ],
    "{src,examples,perf}/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "{src,examples,perf}/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "escapace/typescript-library-starter",
  "scripts": {
    "build": "npx recce build -e src/index.ts",
    "lint": "ls-lint && eslint 'src/**/*.ts'",
    "test": "npx recce test --browser 'src/**.spec.ts' --node 'src/**.spec.ts' --reporter lcov --reporter text",
    "typecheck": "tsc --noEmit"
  },
  "sideEffects": false,
  "typings": "lib/types/index.d.ts"
}
