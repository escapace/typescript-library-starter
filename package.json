{
  "name": "@escapace/typescript-library-starter",
  "description": "",
  "version": "0.0.0",
  "author": "escapace <opensource@escapace.com>",
  "browser": "lib/umd/index.js",
  "bugs": "https://github.com/escapace/typescript-library-starter/issues",
  "dependencies": {
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/chai": "4.2.7",
    "@types/mocha": "5.2.7",
    "@types/node": "13.5.0",
    "@typescript-eslint/eslint-plugin": "2.17.0",
    "@typescript-eslint/parser": "2.17.0",
    "chai": "4.2.0",
    "codecov": "3.6.2",
    "eslint": "6.8.0",
    "eslint-config-escapace": "3.0.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-config-standard-with-typescript": "12.0.1",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jsdoc": "21.0.0",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.1",
    "lint-staged": "10.0.2",
    "prettier": "1.19.1",
    "semantic-release": "16.0.3",
    "syncpack": "4.5.5",
    "typescript": "3.7.5"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/escapace/typescript-library-starter",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run typecheck && npm run test"
    }
  },
  "keywords": [
    "TypeScript"
  ],
  "license": "MPL-2.0",
  "lint-staged": {
    "package.json": [
      "syncpack-format --source",
      "syncpack-set-semver-ranges --dev --source"
    ],
    "{src,examples,perf}/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "{src,examples,perf}/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "escapace/typescript-library-starter",
  "scripts": {
    "build": "recce build -e src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "test": "recce test --browser 'src/**.spec.ts' --node 'src/**.spec.ts' --reporter lcov --reporter text",
    "typecheck": "tsc --noEmit"
  },
  "sideEffects": false,
  "typings": "lib/types/index.d.ts"
}
