{
  "name": "typescript-library-starter",
  "version": "0.0.0",
  "description": "",
  "keywords": ["TypeScript"],
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "browser": "lib/umd/index.js",
  "typings": "lib/types/index.d.ts",
  "sideEffects": false,
  "files": ["lib"],
  "bugs": "https://github.com/escapace/typescript-library-starter/issues",
  "author": "escapace <opensource@escapace.com>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/escapace/typescript-library-starter",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=9.0.0"
  },
  "scripts": {
    "lint":
      "tslint --exclude 'src/types/**/*.ts' --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "build": "recce build -e src/index.ts",
    "test:travis": "npm run lint && npm run test",
    "test": "npm run test:node && npm run test:browser",
    "report-coverage":
      "npm run test:coverage && nyc report --reporter=text-lcov > coverage.lcov && codecov ; rimraf coverage.lcov",
    "test:browser": "karma start --single-run",
    "test:node":
      "cross-env TS_NODE_PROJECT=tsconfig-node.json mocha --opts .mocha.opts 'src/**/*.spec.ts'",
    "test:coverage": "nyc npm run test:node"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "tslint --exclude 'src/types/**/*.ts' --project tsconfig.json --fix",
      "prettier --write --parser typescript --trailing-comma none --no-semi --single-quote",
      "git add"
    ],
    "{src,test}/**/*.js": [
      "prettier --write --trailing-comma none --no-semi --single-quote",
      "git add"
    ],
    "**/*.json": ["prettier --write --parser json", "git add"],
    "**/*.md": ["prettier --parser markdown --print-width 80", "git add"]
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "tempDirectory": "./node_modules/.cache/nyc_output",
    "include": ["src/**/*.ts"],
    "extension": [".ts", ".tsx"],
    "exclude": ["src/**/*.spec.ts"],
    "require": ["ts-node/register"],
    "reporter": ["text"],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@babel/polyfill": "^7.0.0-beta.51",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.5.1",
    "chai": "^4.1.2",
    "codecov": "^3.0.2",
    "cross-env": "^5.2.0",
    "husky": "^0.15.0-rc.13",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-typescript": "^3.0.12",
    "lint-staged": "^7.2.0",
    "lodash": "^4.17.10",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.7",
    "puppeteer": "^1.5.0",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-escapace": "^1.2.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-config-standard": "^7.1.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.9.2",
    "validate-commit": "^3.4.0"
  },
  "dependencies": {}
}
