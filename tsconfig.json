{
  "compilerOptions": {
    "declarationDir": "dist/types",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/lib",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/types/*"]
    },
    "lib": ["es2015", "es2015.promise", "es2016", "es2017", "esnext"]
  },
  "include": ["src"]
}
